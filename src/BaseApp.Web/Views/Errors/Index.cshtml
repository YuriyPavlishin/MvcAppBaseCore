@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,700" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Error</title>

    <style>
        html, body {
            background: #f5f5f5;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            color: #666;
            font-size: 16px;
            padding: 0;
            margin: 0;
            text-align: center;
        }


        .main-container {
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: center;
            max-width: 450px;
            margin: 0 auto;
            height: calc(100vh);
            text-align: left;
        }

        .header {
            font-size: 40px;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .date {
            font-style: italic;
            color: #888;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .description {
            margin-bottom: 35px;
            font-weight: 400;
            color: #444;
            line-height: 26px;
        }

        .details {
            font-size: 14px;
            color: #888;
            margin-bottom: 60px;
        }

            .details a {
                color: #2ca4e3;
            }
        
    </style>
</head>
<body>
    <div class="main-container">
        <div class="header">
            <img src="data:image/svg+xml;utf8;base64," width="40" height="40" />
        </div>
        <div class="date">@DateTime.Now.ToString("MM/dd/yyyy hh:mm tt")</div>
        <div class="description">
            Internal Server Error.
            <br /><br />
            An error occurred while processing your request.
        </div>
    </div>
</body>
</html>